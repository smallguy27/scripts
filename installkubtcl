#!/bin/bash

#scriptkubernetes
sudo sed -i '12s/^/#/' /etc/fstab
#install the apt-transport-https package and curl
sudo apt install apt-transport-https curl -y  
#install kubctl
curl -LO "https://dl.k8s.io/release/v1.30.0/bin/linux/amd64/kubectl"
#verify
curl -LO "https://dl.k8s.io/v1.30.0/bin/linux/amd64/kubectl.sha256"
echo "$(cat kubectl.sha256) kubectl" | sha256sum --check
kubectl version --client
#make executble 
chmod +x kubectl
#make new dir and move
mkdir home/smallguy27/kubby
sudo mv kubectl home/smallguy27/kubby
